
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-primary font-weight-bold">Người Dùng</h1>
</div>

<!-- Page Body -->
<div class="card">
    <div class="card-body">

        <!-- Content Row -->
        <div class="row mb-4">
            <div class="col-md-2">
                <a href="/admin/user/create" class="btn btn-success">Tạo Mới</a>
            </div>
        </div>

        <h4>Danh Sách</h4>
        <!-- Content Row -->
        <div class="row">
            <!-- Table -->
            <div class="col-md-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Mã</th>
                            <th>Ảnh</th>
                            <th>Họ Tên</th>
                            <th>Điện Thoại</th>
                            <th>Email</th>
                            <th>Quyền</th>
                            <th>Ngày Tạo</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 1;
                            foreach (var t in Model)
                            {
                        <tr>

                            <td>@i</td>
                            <td><p>@t.user_id</p></td>
                            <td>
                                <image src="/images/user/@t.user_image" alt="img" width="80">
                            </td>
                            <td><p>@t.user_name</p></td>
                            <td><p>@t.user_phone</p></td>
                            <td><p>@t.user_email</p></td>
                            <td>
                                @if (t.user_type == 0) {
                                <span class="text-white bg-secondary p-1">Nhân Viên</span>
                                } else {
                                <span class="text-white bg-success p-1">Quản Trị</span>
                                }
                            </td>
                            <td><p>@t.user_created_at</p></td>
                            <td>
                                <a href="/admin/user/info/@t.user_id" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a href="/admin/user/delete/@t.user_id"
                                   class="btn btn-danger btn-circle btn-sm btn-delete"
                                   onclick="return confirmDelete(this)">
                                    <i class=" fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                                i++;
                            }
                        }
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- kết thúc main-container -->

    <!-- Javascript -->
@section script {


    <script>
        // Xác nhận trước khi xóa. btnDelete được truyền vào bằng từ khóa this trong lúc gọi hàm
        const confirmDelete = (btnDelete) => {
            Swal.fire({
                title: 'Xóa người dùng này?',
                text: "Bạn không thể khôi phục sau khi xóa",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.assign(btnDelete.href)
                }
                return false
            })
            return false
        }

    </script>
    }