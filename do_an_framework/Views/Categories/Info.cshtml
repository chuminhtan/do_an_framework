<!-- Khai báo sử dụng layout admin -->
@{
    ViewData["Title"] = "Info";
}

@{
    Layout = "_AdminLayout";
}
@model do_an_framework.Models.CategoryModel; 
<!-- Khai báo định nghĩa phần main-container trong layout admin-->
<!-- Page Heading -->
<div class="mb-3">
</div>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-primary font-weight-bold">Thông Tin Danh Mục</h1>
    <h5><a class="text-primary mb-5" href="admin/Categories/list">Danh mục</a> / Thông tin danh mục</h5>
</div>
<!-- Page Body -->
<div class="card">
    <div class="card-body">
        <!-- Content Row -->
        <form class="conatainer" action="/Categories/Info" method="POST">
            <div class="row d-flex justify-content-between">
                <div class="col-md-5">
                    <!-- mã -->
                    <div class="form-group row">
                        <label asp-for="@Model.id" class="col-md-3 col-form-label">Mã</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="@Model.id" class="form-control"
                                   value="@Model.id" readonly />
                        </div>
                    </div>
                    <!-- tên -->
                    <div class="form-group row">
                        <label asp-for="@Model.name" class="col-md-3 col-form-label">Tên</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="@Model.name" class="form-control"
                                   placeholder="Nhập tên" pattern=".{3,40}" title="Tối thiểu 3 ký tự và tối đa 40 ký tự"
                                   required value="@Model.name" />
                        </div>
                    </div>

                    <!-- mô tả -->
                    <div class="form-group row">
                        <label asp-for="@Model.description" class="col-md-3 col-form-label">Mô tả</label>
                        <div class="col-md-8">
                            <textarea class="form-control" asp-for="@Model.description"
                                      rows="5">@Model.description</textarea>
                        </div>
                    </div>

                </div>
            </div>

            <!-- submit -->
            <div class="row d-flex justify-content-center">
                <button class="btn btn-success mr-3" type="submit">Cập Nhật</button>
                <a href="admin/category/list" class="btn btn-secondary">Quay Lại</a>
            </div>

        </form>
        <!-- errors -->
        <div class="row">
        </div>
    </div>
    <!-- end card body -->
</div>
<!-- kết thúc main-container -->
