<!-- Khai báo sử dụng layout admin -->
@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "_AdminLayout";
}
@model do_an_framework.Models.CategoryModel
<!-- Khai báo định nghĩa phần main-container trong layout admin-->
<!-- Page Heading -->
<div class="mb-3">
</div>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-primary font-weight-bold">Tạo Mới</h1>
    <h5><a class="text-primary mb-5" href="/categories/list">Danh Mục</a> / Tạo Mới</h5>
</div>
<!-- Page Body -->
<div class="card">
    <div class="card-body">

        <!-- Content Row -->
        <form class="conatainer" asp-action="Create" asp-controller="Categories" method="POST">
            <div class="row d-flex justify-content-between">
                <div class="col-md-5">

                    <!-- tên -->
                    <div class="form-group row">
                        <label asp-for="@Model.name" class="col-md-3 col-form-label">Tên</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="@Model.name" class="form-control"
                                   placeholder="Nhập tên" pattern=".{3,40}" title="Tối thiểu 3 ký tự và tối đa 40 ký tự"
                                   required />
                        </div>
                    </div>

                    <!-- mô tả -->
                    <div class="form-group row">
                        <label asp-for="@Model.description" class="col-md-3 col-form-label">Mô tả</label>
                        <div class="col-md-8">
                            <textarea class="form-control" asp-for="@Model.description" id="category_description"
                                      rows="5"></textarea>
                        </div>
                    </div>

                </div>
            </div>

            <!-- submit -->
            <div class="row d-flex justify-content-center">
                <button class="btn btn-success mr-3" type="submit">Lưu</button>
                <a href="admin/category/list" class="btn btn-secondary">Hủy</a>
            </div>

        </form>

        <!-- errors -->
        <div class="row">

        </div>
        <!-- end card body -->
    </div>
    <!-- kết thúc main-container -->
    <!-- Javascript -->
    @section script {
        <script>
        // Kiểm tra biến errors từ server gửi về. Nếu có lỗi xuất popup thông báo

        </script>
    }

